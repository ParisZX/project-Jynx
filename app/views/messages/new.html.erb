<% provide(:title, 'New Message') %>
<h1>New Message</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @message, :url => user_messages_path(@user) do |f| %>

        <%= f.hidden_field :container, :value => "new" %>

        <%= f.label "To" %>
        <%= f.text_field :recepient_id %>

        <%= f.label "Message" %>
        <%= f.text_area :body %>

        <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>